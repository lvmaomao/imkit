<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_enabled="false">
        <shape>
            <solid android:color="#DDDDDD" />
            <corners android:radius="20dp" />
            <padding android:bottom="7dp" android:left="2dp" android:right="2dp" android:top="7dp" />
        </shape>
    </item>

    <item android:state_enabled="true" android:state_pressed="true">
        <shape>
            <solid android:color="#138742" />
            <corners android:radius="20dp" />
            <padding android:bottom="7dp" android:left="2dp" android:right="2dp" android:top="7dp" />
        </shape>
    </item>

    <item android:state_enabled="true" android:state_pressed="false">
        <shape>
            <solid android:color="#43AC43" />
            <corners android:radius="20dp" />
            <padding android:bottom="7dp" android:left="2dp" android:right="2dp" android:top="7dp" />
        </shape>
    </item>
</selector><!--<?xml version="1.0" encoding="utf-8"?>--><!--<selector xmlns:android="http://schemas.android.com/apk/res/android">-->

